<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="currentNotePlaying"
            type="android.databinding.ObservableField&lt;String&gt;" />
    </data>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:color/transparent"
            android:tint="@color/colorTextSecondary"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:src="@drawable/avd_playing_note_anim"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="64dp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/spacegrotesk_semibold"
                android:id="@+id/tvNote"
                android:text="@{currentNotePlaying}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:text="Tap to stop"
                android:layout_marginTop="-6dp"
                android:textAllCaps="true"
                android:fontFamily="@font/spacegrotesk_bold" />
        </LinearLayout>
    </RelativeLayout>
</layout>