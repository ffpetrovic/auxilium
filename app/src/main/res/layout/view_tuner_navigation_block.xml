<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"> <!-- Navigation Block -->
    <!--<ImageView-->
        <!--android:id="@+id/navigationBlockActiveIndicator"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="6dp"-->
        <!--android:tint="@color/colorWhite"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--app:srcCompat="@drawable/ic_view_active_indicator"-->
        <!--android:layout_marginBottom="-3dp"/>-->
    <LinearLayout
        android:id="@+id/navigationBlockRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navigationBlockImage"
            android:layout_gravity="start|center_vertical"
            android:layout_width="28dp"
            android:layout_height="32dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:color/transparent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/navigationBlockSpecificText"
                android:textSize="16dp"
                android:fontFamily="@font/spacegrotesk_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuning" />
            <TextView
                android:id="@+id/navigationBlockGroupText"
                android:textSize="12dp"
                android:letterSpacing=".15"
                android:textAllCaps="true"
                android:fontFamily="@font/spacegrotesk_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                android:text="Group" />
        </LinearLayout>
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:layout_width="12dp"
            android:layout_height="8dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorTextSecondary"
            app:srcCompat="@drawable/ic_arrow_up" />
    </LinearLayout>
</merge>